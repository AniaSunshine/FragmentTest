<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_floating_material_dark" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <RadioButton
            android:id="@+id/rb_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/select_tab_index"
            android:gravity="center"
            android:text="首页"
            android:checked="true"
            android:textColor="@color/select_menu_txt"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/select_tab_mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/select_menu_txt"
            android:textSize="10dp"/>

        <RadioButton
            android:id="@+id/rb_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/select_tab_account"
            android:gravity="center"
            android:text="账户"
            android:textColor="@color/select_menu_txt"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/rb_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/select_tab_more"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/select_menu_txt"
            android:textSize="10sp"/>

    </RadioGroup>
</LinearLayout>